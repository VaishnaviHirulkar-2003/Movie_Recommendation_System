<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>User Admin</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      color: #eee;
    }

    .moviecon {
      max-width: 1100px;
      margin: auto;
      background: #1e1e1e;
      /* padding: 25px; */
      border-radius: 10px;
      box-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
      border: 1px solid #333;
      margin-top: 3%;
      /* border: 1px solid white; */
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    thead tr {
      background: #2c2c2c;
      color: #f1f1f1;
      font-weight: 700;
      text-transform: uppercase;
    }

    th, td {
      padding: 12px 18px;
      text-align: center;
      border-bottom: 1px solid #333;
      font-size: 14px;
    }

    tbody tr:hover {
      background: #333;
      cursor: pointer;
    }

    td a.view-link {
      color: #59a6ff;
      font-weight: 600;
      text-decoration: none;
      transition: color 0.2s ease;
    }

    td a.view-link:hover {
      color: #a0cfff;
    }
    td a
    {
      text-decoration: none;
      color: #59a6ff;
    }
    td a button {
      background: #2c2c2c;
      border: 1px solid #444;
      color: #bbb;
      padding: 7px 12px;
      border-radius: 5px;
      cursor: pointer;
      font-size: 14px;
      transition: all 0.2s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 6px;
    }

    td a button:hover {
      background: #59a6ff;
      border-color: #59a6ff;
      color: #fff;
      transform: scale(1.05);
    }

    td a button i.fa-trash-alt {
      color: #ff6b6b;
    }

    td a button i.fa-pen-to-square {
      color: #59a6ff;
    }

    /* Pagination */
    .pagination {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin-top: 20px;
    }

    .pagination a {
      padding: 9px 15px;
      background: #2c2c2c;
      border-radius: 6px;
      border: 1px solid #444;
      color: #bbb;
      text-decoration: none;
      font-weight: 600;
      transition: background-color 0.2s ease, color 0.2s ease;
      user-select: none;
    }

    .pagination a:hover {
      background: #59a6ff;
      border-color: #59a6ff;
      color: #fff;
    }

    .pagination a.active {
      background: #59a6ff;
      border-color: #59a6ff;
      color: #fff;
      font-weight: 700;
      cursor: default;
    }
    .moviecon input {
      width: 80%;
      margin-left: 10%;
      height: 30px;
      border: 1px solid gray;
      border-radius: 8px;
      color: white;
      background-color: black;
      font-weight: 600;
      margin-bottom: 2px;
      margin-top: 5px;
    }
  </style>
</head>
<body>
  <div class="moviecon">
    <input type="text" name="username" value="" placeholder="Enter the Seach name" oninput="getsearchuser(this.value)">
    <table>
      <thead>
        <tr>
          <th>Sr</th>
          <th>Username</th>
          <th>Email</th>
          <!-- <th>Created</th> -->
          <!-- <th>Updated</th> -->
           <th>View</th>
          <th>Delete</th>
          <!-- <th>Update</th> -->
        </tr>
      </thead>
      <tbody>
        <% if (user.length > 0) { %>
          <% user.forEach((u, index) => { %>
            <tr>
              <td><%= (currentPage - 1) * perPage + index + 1 %></td>
              <td><%= u.username %></td>
              <td><%= u.email %></td>
              <!-- <td><%= u.created_time %></td>
              <td><%= u.updated_time %></td> -->
              <td><a href="/admin/viewProfileparticular?id=<%=u.user_id%>">View</a></td>
              <td>
                <a href="/admin/deleteuser?id=<%= u.user_id %>">
                  <button><i class="fas fa-trash-alt"></i></button>
                </a>
              </td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="7"><strong>No Data Available</strong></td>
          </tr>
        <% } %>
      </tbody>
    </table>

    <!-- Pagination -->
   <div class="pagination">
  <% if (currentPage > 1) { %>
    <a href="?page=<%= currentPage - 1 %>">&laquo;</a>
  <% } %>

  <% for(let i = 1; i <= totalPages; i++) { %>
    <a href="?page=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
  <% } %>

  <% if (currentPage < totalPages) { %>
    <a href="?page=<%= currentPage + 1 %>">&raquo;</a>
  <% } %>
</div>
  </div>

  <script>
    function getsearchuser(value) {  // not getsearcuser
  const tbody = document.querySelector("tbody");
  const pagination = document.querySelector(".pagination");

  if (value.trim() === "") {
    location.reload(); // Reload the original page with full data
    return;
  }

  fetch(`/admin/searchuser?query=${encodeURIComponent(value)}`)
    .then(res => res.text())
    .then(html => {
      tbody.innerHTML = html;
      pagination.style.display = "none";
    })
    .catch(err => {
      console.error("Search error:", err);
    });
}

  </script>
</body>
</html>
