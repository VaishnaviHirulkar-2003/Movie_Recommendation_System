<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <title>All Movies</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      background: #121212;
      color: #fff;
    }

    .movie-container {
      width: 100%;
      margin: 40px auto;
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      justify-content: center;
      /* border: 1px solid #000; */
    }

    .card {
      width: 45%;
      background: #f1efef;
      border-radius: 10px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
      overflow: hidden;
      display: flex;
      flex-direction: column;
      padding: 10px;
    }

    .card-img img {
      width: 100%;
      height: 230px;
      object-fit: cover;
      transition: transform 0.3s ease;
      filter: contrast(70%);
    }

    .card-img img:hover {
      transform: scale(1.03);
      filter: brightness(90%);
    }

    .card-desc {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      padding: 15px;
    }

    .desc-item {
      margin-bottom: 10px;
    }

    .desc-item h4 {
      text-align: center;
      margin: 0 0 10px;
      font-size: 15px;
      color: black;
    }

    .desc-item  button {
      margin: 5px;
      width: 100px;
      height: 30px;
      cursor: pointer;
      border: none;
      border-radius: 4px;
      background-color:gray;
      color: black;
      transition: all 0.3s ease;
    }

    .desc-item button:hover {
      background-color: darkred;
      color: white;
    }

    .desc-item .btn-group {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 10px;
    }
  </style>
</head>
<body>

  <div class="movie-container">
    <% if (movies.length > 0) { %>
      <% movies.forEach(d => { %>
        <div class="card">
          <div class="card-img">
            <img src="<%= d.poster_url %>" alt="<%= d.title %>">
          </div>
          <div class="card-desc">
            <div class="desc-item">
              <h4>Movie: <%= d.title %></h4>
            </div>
            <div class="desc-item btn-group">
             
            </div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <p style="text-align: center; width: 100%; font-size: 18px; margin-top: 20%;">No Watch History Found Count is 0.</p>
    <% } %>

    <a href="/admin/viewProfileparticular?id=<%=user_id%>" class="desc-item"><button>Back To Profile</button></a>
  </div>

</body>
</html>
