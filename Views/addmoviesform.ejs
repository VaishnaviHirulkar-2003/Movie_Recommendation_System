<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add Movie</title>
<style>
body {
  margin: 0;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  background: url('/your-cinema-background.jpg') no-repeat center center/cover;
}

.AddMovie {
  max-width: 90%;
  margin: 0% auto;
  padding: 25px;
  background: rgba(20, 20, 20, 0.85);
  border-radius: 15px;
  box-shadow: 0 0 25px rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(8px);
  color: #fff;
  overflow: auto;
  height: 66vh;
}

.AddMovie h2 {
  font-size: 22px;
  margin-bottom: 20px;
  font-weight: 600;
  color: #fff;
  background: linear-gradient(to right, #0f91ff, #0984e3);
  padding: 10px;
  border-radius: 6px;
  text-align: center;
}

.AddMovie input[type="text"],
.AddMovie input[type="file"],
.AddMovie input[type="date"],
.AddMovie input[type="number"],
.AddMovie input[type="url"],
.AddMovie select,
.AddMovie textarea {
  width: 100%;
  padding: 12px;
  margin: 12px 0;
  font-size: 15px;
  border: 1px solid #444;
  border-radius: 8px;
  background-color: #121212;
  color: #eee;
  transition: border 0.3s ease, background 0.3s ease;
  resize: none;
}

.AddMovie input:focus,
.AddMovie textarea:focus,
.AddMovie select:focus {
  border-color: #0f91ff;
  outline: none;
  background-color: #1c1c1c;
}

.AddMovie textarea {
  height: 100px;
  font-family: inherit;
}

.AddMovie label {
  display: block;
  margin-top: 10px;
  text-align: left;
  font-weight: 500;
  font-size: 14px;
  color: #ccc;
}

.AddMovie input::placeholder,
.AddMovie textarea::placeholder {
  color: #aaa;
}

.AddMovie #button {
  margin-top: 20px;
  width: 100%;
  padding: 14px;
  background: #0f91ff;
  color: white;
  font-size: 16px;
  border: none;
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  transition: background 0.3s ease, transform 0.2s ease;
}

.AddMovie #button:hover {
  background-color: #0d75d8;
  transform: scale(1.03);
}

.AddMovie h5 {
  color: #44ff88;
  font-weight: 500;
  margin-top: 10px;
}
/* Wrap every 2 inputs in a flex row */
.AddMovie input[type="text"],
.AddMovie input[type="file"],
.AddMovie input[type="date"],
.AddMovie input[type="number"],
.AddMovie input[type="url"],
.AddMovie select,
.AddMovie textarea {
  display: inline-block;
  width: 48%;
  margin-right: 2%;
  box-sizing: border-box;
}

/* For odd items to not break layout */
.AddMovie input:nth-of-type(2n),
.AddMovie select:nth-of-type(2n),
.AddMovie textarea:nth-of-type(2n) {
  margin-right: 0;
}

/* Make textareas full width if needed */
.AddMovie textarea {
  width: 100%;
  display: block;
}

</style>


</head>
<body>

  <div class="AddMovie">
  <h2>Add Movie</h2>
  <form action="/admin/addmovie" method="POST" enctype="multipart/form-data">
    <input type="text" placeholder="Enter Movie Title" name="title" required>
      <input type="date"  placeholder="Release Date" name="date">
    <textarea  placeholder="Enter Movie Description" name="desc"></textarea>
    <select id="genreSelect" name="genre_id" onchange="setGenreName()" required>
            <option value="">-- Choose Genre --</option>
            <% genre.forEach(function(genre) { %>
                <option value="<%=genre.genre_id%>"><%= genre.name %></option>
          <% }); %>
    </select>

      <input type="url" placeholder="Enter the Movie_Url" name="movie">
    <input type="text" placeholder="Director" name="dir">
    <input type="text"  placeholder="Language" name="lang">
    <input type="text"  placeholder="Country" name="country">
    <input type="number" step="0.01"  placeholder="Budget (₹)" name="rup">
    <input type="number" step="0.01"  placeholder="Revenue (₹)" name="rev">
    <input type="number"  placeholder="Runtime (in minutes)" name="time">
    
    <!-- Poster Upload -->
    <label>Upload Poster Image:</label>
 <input type="url" name="img" placeholder="Paste Poster Image URL" required>

    <!-- Trailer URL -->
    <input type="url"  placeholder="Enter Trailer Vedio URL" name="url">
    <input type="submit" value="Add Movie" id="button" style=" background: linear-gradient(to right, #2600ff, #ff5722);"></input>

    <h5><%=msg%></h5>
  </form>
</div>


</body>
</html>
