<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin Users Table</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      color: #eee;
      background: #121212;
      overflow: hidden;
    }

    .admin-container {
      width: 100%;
      margin: auto;
      background: #1e1e1e;
      border-radius: 10px;
      box-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
      margin-top: 5%;
      padding-bottom: 20px;
    }

    .search-bar {
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 30px;
    }

    .search-bar form {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .search-bar input[type="text"] {
      padding: 10px 14px;
      border-radius: 6px;
      border: 1px solid #444;
      background: #2c2c2c;
      color: white;
      font-size: 14px;
      width: 300px;
      margin-top: 8%;
    }

    .search-bar input[type="text"]::placeholder {
      color: #aaa;
    }

    .search-bar button {
      padding: 10px 16px;
      background-color: #cd5a1c;
      border: none;
      color: white;
      border-radius: 6px;
      font-weight: bold;
      cursor: pointer;
      margin-top: 8%;
      transition: background-color 0.2s ease;
    }

    .search-bar button:hover {
      background-color: #e18c1e;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    thead tr {
      background: #2c2c2c;
      color: #f1f1f1;
      font-weight: 700;
      text-transform: uppercase;
    }

    th, td {
      padding: 12px 18px;
      text-align: center;
      border-bottom: 1px solid #333;
      font-size: 14px;
    }

    tbody tr:hover {
      background: #333;
      cursor: pointer;
    }

    td a.button-link {
      background: #2c2c2c;
      border: 1px solid #444;
      color: #bbb;
      padding: 7px 12px;
      border-radius: 5px;
      cursor: pointer;
      font-size: 14px;
      text-decoration: none;
      transition: all 0.2s ease;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 6px;
    }

    td a.button-link:hover {
      background: #baa53d;
      border-color: #ff5959;
      color: #fff;
      transform: scale(1.05);
    }

    td a.button-link i.fa-trash-alt {
      color: #cd5607;
    }

    td a.button-link i.fa-pen-to-square {
      color: #f67a06;
    }

    .pagination {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin-top: 20px;
    }

    .pagination a {
      padding: 9px 15px;
      background: #2c2c2c;
      border-radius: 6px;
      border: 1px solid #444;
      color: #bbb;
      text-decoration: none;
      font-weight: 600;
      transition: background-color 0.2s ease, color 0.2s ease;
      user-select: none;
    }

    .pagination a:hover {
      background: #59a6ff;
      border-color: #59a6ff;
      color: #fff;
    }

    .pagination a.active {
      background: #7d2712;
      border-color: #98adc5;
      color: #fff;
      font-weight: 700;
      cursor: default;
    }
  </style>
</head>
<body>
  <div class="admin-container">

    <!-- ðŸ” Search Bar -->
    <div class="search-bar">
      <form action="/admin/searchadmin" method="GET">
        <input type="text" name="query" placeholder="Search by username or email..." required>
        <button type="submit"><i class="fas fa-search"></i> Search</button>
      </form>
    </div>

    <!-- ðŸ“‹ Admin Users Table -->
    <table>
      <thead>
        <tr>
          <th>Sr</th>
          <th>Username</th>
          <th>Email</th>
          <th>Created At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (admin.length > 0) { %>
          <% admin.forEach((u, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= u.username %></td>
              <td><%= u.email %></td>
              <td><%= u.created_time %></td>
              <td>
                <a href="/admin/delete?id=<%= u.user_id %>" class="button-link"><i class="fas fa-trash-alt"></i></a>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="6"><strong>No Admins Found</strong></td>
          </tr>
        <% } %>
      </tbody>
    </table>

    <!-- ðŸ“„ Pagination -->
    <div class="pagination">
      <% if (currentPage > 1) { %>
        <a href="?page=<%= currentPage - 1 %>">&laquo;</a>
      <% } %>

      <% for(let i = 1; i <= totalPages; i++) { %>
        <a href="?page=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
      <% } %>

      <% if (currentPage < totalPages) { %>
        <a href="?page=<%= currentPage + 1 %>">&raquo;</a>
      <% } %>
    </div>
  </div>
</body>
</html>
